<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="50" autoDrawBackground="false" click="onClickHandler(event);">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import com.chloe.mvcs.model.instantMessenger.InstantMessengerHistoryModel;
			
			[Bindable]
			private var instantMessengerAddress:String;
			
			[Bindable]
			private var dates:String;
			
			[Bindable]
			private var reason:String = "It's the name I was born with"
			
			private var _instantMessengerHistory:InstantMessengerHistoryModel;
			
			override public function set data(value:Object):void {
				
				_instantMessengerHistory = value as InstantMessengerHistoryModel;
				
				this.instantMessengerAddress = _instantMessengerHistory.account.account + "@" + _instantMessengerHistory.account.domain;
				dates = _instantMessengerHistory.startDate.month + " " + _instantMessengerHistory.startDate.day + ", " + _instantMessengerHistory.startDate.year + " - " + _instantMessengerHistory.endDate.month + " " + _instantMessengerHistory.endDate.day + ", " + _instantMessengerHistory.endDate.year;
			}
			
			private function onClickHandler(event:MouseEvent):void {
				
				dispatchEvent(new InstantMessengerEvent(InstantMessengerEvent.EDIT_INSTANT_MESSENGER_ACCOUNT, _instantMessengerHistory));
			}
		]]>
	</fx:Script>
	<s:layout>
		<s:VerticalLayout gap="-3"/>
	</s:layout>
	<s:Label text="{instantMessengerAddress}" styleName="ItemTitle"/>
	<s:Group>
		<s:layout>
			<s:VerticalLayout gap="0"/>
		</s:layout>
		<s:Label text="{dates}" styleName="ItemSubTitle"/>
		<s:Label text="{reason}" styleName="ItemSubTitle"/>
	</s:Group>
</s:ItemRenderer>
