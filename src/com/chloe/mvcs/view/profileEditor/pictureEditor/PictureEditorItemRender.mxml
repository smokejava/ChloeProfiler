<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100%" xmlns:pictureEditor="com.chloe.mvcs.view.profileEditor.pictureEditor.*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import com.chloe.mvcs.model.picture.PictureHistoryModel;
			import com.chloe.mvcs.model.picture.PictureModel;
			
			[Bindable]
			private var pictureData:PictureHistoryModel;
			
			[Bindable]
			private var picture:PictureModel;
			
			override public function set data(value:Object):void {
				
				pictureEditor.addEventListener(PictureChangeEvent.PICTURE_EDIT_COMPLETE, onPictureChangeCompleteHandler);
				pictureData = value as PictureHistoryModel;
				picture = pictureData.picture;

			}
			
			private function onPictureChangeCompleteHandler(event:PictureChangeEvent):void {
				
				var temp:PictureHistoryModel = new PictureHistoryModel();
				temp.picture = event.pictureModel;
				dispatchEvent(new PictureSaveEvent(PictureSaveEvent.SAVE_PICTURE, temp));
			}
		]]>
	</fx:Script>
	<pictureEditor:PictureEditor id="pictureEditor" pictureData="{picture}"/>
</s:ItemRenderer>
