<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100%" xmlns:search="com.chloe.mvcs.view.search.*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			
			import com.chloe.mvcs.model.ChloeProfileModel;
			
			private var _profileToEdit:ChloeProfileModel;
			
			public function set profileToEdit(aProfile:ChloeProfileModel):void {
				
				profileToEdit = aProfile
			}
			
		]]>
	</fx:Script>
	<s:transitions>
		<s:Transition fromState="search" toState="profileEditor" autoReverse="true">
			<s:Move targets="{searchView}" duration="1000"/>
		</s:Transition>
	</s:transitions>
	
	<s:states>
		<s:State name="search"/>
		<s:State name="profileEditor"/>
		<s:State name="pictureEditor"/>
	</s:states>
	<search:SearchView id="searchView" x.search="0" x.profileEditor="{-Screen.mainScreen.bounds.width}" x.pictureEditor="{-(Screen.mainScreen.bounds.width)}"/>
</s:Group>
