<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100%" click="onClickItemHandler(event)">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.chloe.mvcs.view.common.RadioSelectEvent;
			
			[Bindable]
			private var _caption:String =  new String();
			
			private var _radioId:int = new int();
			
			private var _selected:Boolean = false;
			
			public function set radioId(value:int):void 		{_radioId = value};
			public function get radioId():int					{return _radioId};
			public function set caption(value:String):void 		{_caption = value};
			public function get caption():String				{return _caption};
			
			public function get selected():Boolean				{return _selected};
			public function set selected(value:Boolean):void {
				
				_selected = value;
				
				if(_selected) {
					this.currentState = "selected"
				} else {
					this.currentState = "unselected"
				}
			}
			
			
			private function onClickItemHandler(event:MouseEvent):void {
				
				dispatchEvent(new RadioSelectEvent(RadioSelectEvent.ITEM_SELECTED, _radioId));
			}
		]]>
	</fx:Script>
	<s:states>
		<s:State name="unselected"/>
		<s:State name="selected"/>
	</s:states>
	
	<s:transitions>
		<s:Transition fromState="unselected" toState="selected" autoReverse="true">
			<s:Fade target="{bg}" duration="500"/>
		</s:Transition>
	</s:transitions>
	<s:Rect id="bg" width="{label.width + 20}" height="{label.height + 20}" alpha.unselected="0" alpha.selected="1">
		<s:fill>
			<s:SolidColor color="#333333"/>
		</s:fill>
	</s:Rect>
	<s:Label id="label" x="8" y="8" text="{_caption}" styleName.unselected="RadioItem" styleName.selected="RadioItemSelected" click="onClickItemHandler(event)"/>
	
</s:Group>
